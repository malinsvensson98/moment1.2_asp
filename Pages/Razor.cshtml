@page
@{
    ViewData["Title"] = "Razor";

    // För att skriva ut kurserna
    string[] courses = { "DT057G Webbutveckling I", "DT084G Introduktion till programmering med JavaScript", "DT163G Digital bildbehandling för webb", "GD008G Typografi och form för webb", "DT003G Databaser", "DT093G Webbutveckling II", "DT068G Webbanvändbarhet", "DT152G Webbdesign för CMS", "DT173G Webbutveckling III", "IK060G Projektledning", "DT162G JavaScript-baserad webbutveckling", "DT071G Programmering I C#.net" };

}


<br />
<br />
<br />

<article class="boxText">
    <h3>Razor</h3>
    <p><b>Information </b></p>

    <!-- Datum och tid -->
    <p><b>Datum/klockslag: </b> @DateTime.Now.ToString("yyyy-MM-dd H:mm:ss") </p>

    <!-- Skriva ut om det är måndag eller inte -->
    @{

        if (DateTime.Now.ToString("dddd") == "Monday")
        {
            <p>Idag är det Måndag</p>
        }
        else
        {
            <p>Idag är det inte måndag</p>
        }
    }

    <!-- För att skriva ut kurserna med loop-->
    <p><b>Kurser jag läst: </b></p>
    <ul class="courses">
        @foreach (var course in courses)
        {
            <li>@course</li>
        }
    </ul>



</article>
